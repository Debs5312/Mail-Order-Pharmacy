@model Drugs.Models.RefillStatusDto

<br />
<br />
<br />


<form asp-action="EditRefillStatus">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Edit Refill Order</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Id" readonly="readonly" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="UserId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserId" readonly="readonly" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="AdhocRefillId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="AdhocRefillId" readonly="readonly" class="form-control" />
                <span asp-validation-for="Subscription_ID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Subscription_ID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Subscription_ID" readonly="readonly" class="form-control" />
                <span asp-validation-for="Subscription_ID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DrugName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DrugName" readonly="readonly" class="form-control" />
                <span asp-validation-for="DrugName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Quantity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Location" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Location" readonly="readonly" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Start_Date" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Start_Date" readonly="readonly" class="form-control" />
                <span asp-validation-for="Start_Date" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="End_Date" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="End_Date" readonly="readonly" class="form-control" />
                <span asp-validation-for="End_Date" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="PaymentStatus" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-5 pb-3">
                <select asp-for="PaymentStatus" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="RefillIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="ADD" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}