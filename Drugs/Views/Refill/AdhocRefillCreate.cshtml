@model Drugs.Models.AdhokRefillDto
<br />
<br />
<br />
<form asp-action="AdhocRefillCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Add New Refill</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Id" type="number" readonly="readonly" value="0" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="UserID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserID" readonly="readonly" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Subscription_ID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Subscription_ID" readonly="readonly" class="form-control" />
                <span asp-validation-for="Subscription_ID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Drug_ID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Drug_ID" readonly="readonly" class="form-control" />
                <span asp-validation-for="Drug_ID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Drug_Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Drug_Name" readonly="readonly" class="form-control" />
                <span asp-validation-for="Drug_Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Quantity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Location" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Location" readonly="readonly" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="RefillOccurance" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RefillOccurance" readonly="readonly" class="form-control" />
                <span asp-validation-for="RefillOccurance" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="IsPayment" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-5 pb-3">
                <select asp-for="IsPayment" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control" asp-controller="Subscription">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="ADD" class="btn btn-success form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
