@model Drugs.Models.DrugDto

<br />
<br />
<div class="container p-4 border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Manufacturing Date
                </th>
                <th>
                    Expiry Date
                </th>
                <th>
                    Location
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price PEr Package
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Model.Id
                </td>
                <td>
                    @Model.Name
                </td>
                <td>
                    @Model.Mfgdate
                </td>
                <td>
                    @Model.ExpiryDate
                </td>
                <td>
                    @Model.Location
                </td>
