                <td>
                    @((Model.PricePerPackage).ToString("c"))
                </td>
                <td>
                    <a asp-action="GetAllPrescriptions" class="btn btn-success" asp-route-Id="@Model.Id">
                        <i class="fas fa-arrow-alt-circle-right"></i>
                    </a>
                    @*<a asp-action="DrugDelete" class="btn btn-danger" asp-route-Id="@item.Id">
                        <i class="fas fa-trash"></i>
                    </a>*@
