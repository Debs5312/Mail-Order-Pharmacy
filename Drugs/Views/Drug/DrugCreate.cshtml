@model Drugs.Models.DrugDto


<form asp-action="DrugCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">ADD Drugs</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Mfgdate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Mfgdate" class="form-control" />
                <span asp-validation-for="Mfgdate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ExpiryDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Location" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="PricePerPackage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PricePerPackage" class="form-control" />
                <span asp-validation-for="PricePerPackage" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UnitInPackage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UnitInPackage" class="form-control" />
                <span asp-validation-for="UnitInPackage" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Quantity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="DrugIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}