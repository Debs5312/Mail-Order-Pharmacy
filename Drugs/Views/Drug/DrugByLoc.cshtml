@model Drugs.Models.DrugDto

<br />
<br />
<br />
<div class="container p-4 border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Manufacturing Date
                </th>
                <th>
                    Expiry Date
                </th>
                <th>
                    Location
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price PEr Package
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Model.Id
                </td>
                <td>
                    @Model.Name
                </td>
                <td>
                    @Model.Mfgdate
                </td>
                <td>
                    @Model.ExpiryDate
                </td>
                <td>
                    @Model.Location
                </td>
                <td>
                    @Model.Quantity
                </td>
                <td>
                    @((Model.PricePerPackage).ToString("c"))
                </td>
            </tr>
        </tbody>
    </table>
</div>

    <form asp-action="DrugByLoc">
        <br />
        <div class="container border p-3">
            <h1 class="text-primary">Drug Details</h1>
            <hr />
            <div class="row">
                <div class="col-2">
                    <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Id" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Location" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Location" class="form-control" />
                </div>
                <div class="col-5">
                    <input type="submit" value="Place Order" class="btn btn-success form-control" />

                </div>
                <div class="col-5 offset-2">
                    <a asp-action="DrugIndex" class="btn-primary btn form-control ">Back to Home</a>
                </div>
            </div>

            <div>
            </div>
        </div>
    </form>

 
